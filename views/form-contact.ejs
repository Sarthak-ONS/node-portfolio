<%- include('includes/head.ejs') %>
    <%- include('includes/navigation.ejs') %>

        <body>
            <br><br>
            <h3 style="text-align: center;">Thanks for Contacting Me!</h3>
            <br><br>
            <div class="formbold-main-wrapper">
                <div class="formbold-form-wrapper">
                    <form id="contact-form " action="/contact" method="POST">
                        <div class="formbold-mb-5">
                            <label for="name" class="formbold-form-label"> Full Name </label>
                            <input required type="text" name="name" id="name" placeholder="Full Name"
                                class="formbold-form-input" />
                        </div>

                        <div class="formbold-mb-5">
                            <label for="email" class="formbold-form-label"> Email Address </label>
                            <input required type="email" name="email" id="email" placeholder="Enter your email"
                                class="formbold-form-input" />
                        </div>

                        <div class="formbold-mb-5">
                            <label for="subject" class="formbold-form-label"> Subject </label>
                            <input required type="text" name="subject" id="subject" placeholder="Enter your subject"
                                class="formbold-form-input" />
                        </div>

                        <div class="formbold-mb-5">
                            <label for="message" class="formbold-form-label"> Message </label>
                            <textarea required rows="6" name="message" id="message" placeholder="Type your message"
                                class="formbold-form-input"></textarea>
                        </div>

                        <div>
                            <button class="formbold-btn" onclick="formSubmit()">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </body>
        <%- include('includes/end.ejs') %>